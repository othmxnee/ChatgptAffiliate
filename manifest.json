
{
    "manifest_version": 3,
    "name": "ChatGPT Product Detector",
    "version": "1.1",

    "description": "Detects product recommendations in ChatGPT responses and logs to console",
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*",
      "http://localhost:3000/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }