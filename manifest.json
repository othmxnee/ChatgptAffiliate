{
  "manifest_version": 3,
  "name": "ChatGPT Affiliate Tooltip",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
